<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - İkinci El Kitap</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("ANASAYFA", "Index", "Home")</li>
                    <li>
                        @Html.ActionLink("KATAGORİLER", "Index", "BilimKurgu")
                        <ul class="nav navbar-nav">

                            <li>@Html.ActionLink("Bilim Kurgu", "Index", "BilimKurgu")</li>
                            <li>@Html.ActionLink("Romantik", "Index", "Romantik")</li>
                            <li>@Html.ActionLink("Komedi", "Index", "Komedi")</li>
                            <li>@Html.ActionLink("Macera", "Index", "Macera")</li>
                            <li>@Html.ActionLink("100 Temel Eser", "Index", "TemelEserler")</li>
                            <li>@Html.ActionLink("Kişisel Gelişim", "Index", "KisiselGelisim")</li>
                        </ul>
                    </li>
                    <li>
                        @Html.ActionLink("ENLER", "Index", "EnYeniGelenler")
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Yeni Gelenler", "Index", "EnYeniGelenler")</li>
                                <li>@Html.ActionLink("En Cok Satanlar", "Index", "EnCokSatılanlar")</li>
                                
                         </ul>
                     </li>
                    <li>@Html.ActionLink("HAKKIMIZDA", "About", "Home")</li>
                    <li>@Html.ActionLink("İLETİŞİM", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("SEPETİM", "Sepetim", "Home")</li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                    @if (Session["KULLANICIADI"] == null)
                    {
                        <li>@Html.ActionLink("KAYIT OL", "Create", "Kullanıcılar")</li>
                        <li>@Html.ActionLink("GİRİŞ YAP", "GIRIS", "Kullanıcılar")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("ÇIKIŞ YAP", "CIKIS", "Kullanıcılar")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="color:aqua">&copy; @DateTime.Now.Year - İkinci El Kitap Sitesi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
